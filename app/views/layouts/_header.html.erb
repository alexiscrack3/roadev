<header class="p-3 bg-primary">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a class="navbar-brand link-primary" href="/">Roadev</a>
      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <li><%= link_to "Dashboard", dashboard_path, class: "nav-link px-2 text-white" %></li>
        <% if current_user && current_user.admin %>
          <li class="nav-item dropdown">
            <a class="nav-link text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Admin
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
              <li><%= link_to "Learning Paths", admin_learning_paths_path, class: "dropdown-item" %></li>
              <li><%= link_to "Users", users_path, class: "dropdown-item" %></li>
            </ul>
          </li>
        <% end %>
      </ul>
      <div class="text-end">
        <% if logged_in? %>
          <div class="dropdown">
            <a href="#" class="btn dropdown-toggle text-white" id="profile-menu" data-bs-toggle="dropdown" aria-expanded="false">
              <%= current_user.email %>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end" aria-labelledby="profile-menu">
              <li><%= link_to "Profile", user_path(current_user), class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li><%= link_to "Sign out", sign_out_path, class: "dropdown-item", method: :delete %></li>
            </ul>
          </div>
        <% else %>
          <%= link_to "Sign in", sign_in_path, class: "text-white btn me-2" %>
          <%= link_to "Sign up", sign_up_path, class: "btn btn-outline-light" %>
        <% end %>
      </div>
    </div>
  </div>
</header>
