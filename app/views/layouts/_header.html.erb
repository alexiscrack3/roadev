<header class="border-bottom sticky-top">
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container-fluid px-0">
        <a class="navbar-brand" href="/">
          <%= image_tag("roadev-icon.png", :alt => "Roadev", style: "height:40px;width:auto;") %>
          Roadev
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <%= link_to "Dashboard", dashboard_path, class: "nav-link", "aria-current": "page" %>
            </li>
            <% if current_user && current_user.admin %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="admin-menu-link" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Admin
                </a>
                <ul class="dropdown-menu" aria-labelledby="admin-menu-link">
                  <li><%= link_to "Learning Paths", admin_learning_paths_path, class: "dropdown-item" %></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to "Users", users_path, class: "dropdown-item" %></li>
                </ul>
              </li>
            <% end %>
          </ul>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 justify-content-end flex-grow-1">
            <% if logged_in? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="profile-menu-link" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= current_user.email %>
                </a>
                <ul class="dropdown-menu" aria-labelledby="profile-menu-link">
                  <li><%= link_to "Profile", user_path(current_user), class: "dropdown-item" %></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><%= link_to "Sign out", sign_out_path, class: "dropdown-item", method: :delete %></li>
                </ul>
              </li>
            <% else %>
              <%= link_to "Sign in", sign_in_path, class: "btn me-2" %>
              <%= link_to "Sign up", sign_up_path, class: "btn btn-outline-primary" %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </div>
</header>
