<tr id="learning-path-<%= learning_path.id %>">
  <td><%= learning_path.title %></td>
  <td><%= learning_path.description %></td>
  <td class="text-center">
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Actions
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><%= link_to "Show", [:admin, learning_path], class: "dropdown-item", remote: true %></li>
        <li><%= link_to "Edit", edit_admin_learning_path_path(learning_path), class: "dropdown-item", remote: true %></li>
        <li><%= link_to "Destroy", [:admin, learning_path], method: :delete, class: "dropdown-item", data: { confirm: 'Are you sure?', remote: true } %></li>
      </ul>
    </div>
  </td>
</tr>
